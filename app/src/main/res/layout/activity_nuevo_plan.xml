<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoPlanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageButton
            android:layout_width="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_height="wrap_content"
            android:id="@+id/btn_regresar"
            android:background="@color/colorPrimaryDark"/>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:background="@drawable/card_bg">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f4658"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:text="Seleccione Un plan" />

            <Spinner
                android:id="@+id/sp_planes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f4658"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:text="Su Tipo de PLan" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginLeft="12dp"
                android:focusable="false"
                android:drawableRight="@drawable/ic_add_check"
                android:ems="10"
                android:id="@+id/et_tipo"/>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f4658"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:text="Subtotal" />

            <EditText
                android:id="@+id/et_subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_money"
                android:inputType="textPersonName" />



            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f4658"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:text="IVA" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:focusable="false"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_money"
                android:id="@+id/et_iva"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f4658"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:text="Total" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_total"
                android:layout_marginLeft="12dp"
                android:drawableRight="@drawable/ic_money"/>


            <Button
                android:layout_marginTop="20dp"
                android:text="Comprar"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login"
                android:id="@+id/btn_guardar" />




        </LinearLayout>

    </LinearLayout>

</LinearLayout>