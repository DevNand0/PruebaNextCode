<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/card_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3f4658"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Nombre del Usuario" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_user"
            android:ems="10"
            android:id="@+id/et_nombre"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3f4658"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Apellido del Usuario" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_user"
            android:ems="10"
            android:id="@+id/et_apellido"/>


        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3f4658"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Cedula del usuario" />

        <EditText
            android:id="@+id/et_cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_dni"
            android:inputType="phone" />



        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3f4658"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Email del usuario" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic"
            android:id="@+id/et_email"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3f4658"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Ingrese el password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password"
            android:layout_marginLeft="12dp"
            android:drawableRight="@drawable/ic_pass"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="15dp"
            android:orientation="horizontal">

            <Button
                android:text="Actualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_cerrar"
                android:textColor="#FFFF"
                android:layout_margin="5dp"
                android:layout_gravity="center|right"
                android:id="@+id/btn_actualizar"/>

            <Button
                android:text="Cerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login"
                android:textColor="#FFFF"
                android:layout_margin="5dp"
                android:layout_gravity="center|right"
                android:id="@+id/btn_cerrar"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>